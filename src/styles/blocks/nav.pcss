.nav{
    &--color-white {
        .nav__link {
            color: #ffffff;
        }
    }   
}

.nav__list {
    display: flex;
    align-items: center;
}

.nav__item {
    margin-right: 60px;
    border-bottom: 3px solid transparent;
    transition: border-bottom-color .2s;

    &:last-child {
        margin-right: 0;
    }

    &:hover {
        border-bottom-color: #5500f2;
    }
}

.nav__link {
    width: 61px;
    height: 12px;
    line-height: 1.88;
    text-align: left;
    color: #414c63;
    text-decoration: none;
}