.socials {
    display: flex;
    align-items: center;

    &--rounded {
        .socials__link {
            border-radius: 50%;
            border: 1px solid #ccc;
            width: 50px;
            height: 50px;
            position: relative;
            opacity: .3;

            .socials__icon {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 20px;
                height: 20px;
                fill: #ccc;
            }

            &:hover {
                .socials__icon {
                    opacity: 1;
                    fill: green;
                }
            }
        }
    }
}

.socials__item {
    margin-right: 44px;

    &:last-child {
        margin-right: 0;
    }
    
    &:hover {
        .socials__icon {
            fill: green;
        }
    }

}

.socials__link {
    width: 25px;
    height: 31px;
    display: block;
}