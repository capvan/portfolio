}

.form-block__container {
    display: flex;
}

.form__icon {
    width: 26px;
    height: 26px;
    margin-right: -25px;
    margin-bottom: 5px;
    opacity: 0.3;
    fill: #414c63;   
}

.form__block-field {
    width: 100%;
}
.form__block-input {
    width: 100%;
    height: 100%;

    border-bottom: 1px solid #414c63;
    border-top: none;
    border-left: none;
    border-right: none;

    font-size: 18px;
    font-weight: bold;
    line-height: 2.67;
    text-align: left;
    color: #414c63;
    background: inherit;

    padding-left: 30px;

    resize: vertical;
}

.form__block-textarea {
    width: 100%;
    height: 100%;

    border-bottom: 1px solid #414c63;
    border-top: none;
    border-left: none;
    border-right: none;

    font-size: 18px;
    font-weight: bold;
    line-height: 25px;
    text-align: left;
    color: #414c63;
    background: inherit;

    padding-left: 30px;

    resize: vertical;
}