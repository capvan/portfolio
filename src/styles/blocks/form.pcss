.section-form {
    margin-bottom: 160px;
}

.form {
    margin-top: 80px;
    position: relative;

    &::after {
        content: url('/src/images/content/buddha.png');
        position: absolute;
        bottom: 35%;
        right: -25%;
    }
}

.form__container {
    width: 500px;
}

.form__row {
    display: flex;

    &:nth-child(2) {
        .form__block {
            width: 866px;
            margin-bottom: 90px;
        }
    }
}

.form__block {
    width: 408px;
    margin-right: 50px;
    margin-bottom: 30px;

    &:before {
        content: attr(data-title);
        margin-bottom: 21px;
        display: block;
        font-weight: 600;
        color: rgba($text-color, .3);
        margin-left: 50px;
      }
}

.form__block-title {
    font-weight: 600;
    line-height: 1.88;
    text-align: left;
    color: rgba(65, 76, 99, 0.3);

    // &--first {
