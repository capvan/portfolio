.values__title {
    text-align: center;
    margin-bottom: 70px;
}

.values__desc {
    font-weight: 600;
    line-height: 1.88;
    text-align: left;
    color: rgba(65, 76, 99, 0.5);

    margin: 0 32%;
    width: 50%;

    @include tablets() {
        width: 60%;
        margin-left: 21%;
    }

    @include phones() {
        width: 99%;
        margin-left: 0;
        letter-spacing: 0.8px;
    }
}